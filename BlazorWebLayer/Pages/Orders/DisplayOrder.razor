@inherits DisplayOrderBase
@using BlazorWebLayer.Pages.Custom
@using BlazorWebLayer.Pages.Products.Windows
<style>
    .data{
        text-align: center;
    }

    .windowItem {
        width: 100%;
        border: 1px solid black;
        padding: 1%;
        margin:0.5%;
        margin-bottom: 1%;
        box-shadow: rgba(0, 0, 0, 0.07) 0px 1px 1px, rgba(0, 0, 0, 0.07) 0px 2px 2px, rgba(0, 0, 0, 0.07) 0px 4px 4px, rgba(0, 0, 0, 0.07) 0px 8px 8px, rgba(0, 0, 0, 0.07) 0px 16px 16px;
        text-align: center;
    }


</style>

<div>
    <div class="row">
        <span>@Order.OrderName</span>
        <span>State : @Order.StateName</span>
    </div>
    @foreach (var window in Order.Windows) 
    {
        <div class="row windowItem">
            <DisplayWindow Window="window" ShowAction="false" OrderAdd="false" ShowWindowCount="true"></DisplayWindow>
        </div>
    }
    @if (ShowAction)
    {
        <div class="row">
            <div class="col-md-12">
                <a href="@($"editOrder/{Order.OrderId}")" class="btn btn-primary m-1">Edit</a>
                <a class="btn btn-danger m-1" @onclick="Delete_Click">Delete</a>
            </div>
        </div>
    }

</div>

<Confirm @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
         ConfirmationMessage=@($"Are you sure you want to delete This Order ?")>
</Confirm>
